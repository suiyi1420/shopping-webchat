.comment_r_item{height:50%;width:100%;display:flex;align-items: center;color:#777777;}
.comment_content{padding-left:18vw;width:76vw;font-size:4.3vw;}


.shoppingcar{height:100%;width:10vw; margin-left:3vw;display:flex;align-items: center;justify-content: center;font-size:3vw;flex-direction: column;color:#fa3333;}
